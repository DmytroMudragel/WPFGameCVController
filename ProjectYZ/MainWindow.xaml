<Window x:Name="FormMain" x:Class="ProjectYZ.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Pathfinder 1.0" Height="360" Width="530"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}" 
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        ResizeMode="CanMinimize"
        WindowStartupLocation="Manual" Top="600" Left="10"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"     
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14" SizeToContent="WidthAndHeight" Icon="/Icon.ico">
    <Grid x:Name="MainGrid" >
        <Menu IsMainMenu="True" MaxHeight="24" MaxWidth="530" Background="#212121" Margin="0,0,0,311">
            <MenuItem
                Header="Main" 
                Click="MenuItemMain_Click"
                Height="24"
                Background="#212121"
             />
            <MenuItem 
                x:Name="MenuRoutes"  
                Height="24"
                Header="Routes" 
                Click="MenuItemRoutes_Click"
                Background="#212121"
             />
        </Menu>

        <!--Main panel-->
        <Grid x:Name="Main" Margin="0,25,0,-5" Visibility="Visible" >

            <!--Gray card-->
            <materialDesign:Card Padding="32" Margin="10,64,10,15" MaxHeight="300" MaxWidth="510">
                <Button x:Name="ScreenShot" Content="ScreenShot" HorizontalAlignment="Left" Margin="102,113,0,0" VerticalAlignment="Top" Width="108" Height="30" Click="ScreenShot_Click"/>

            </materialDesign:Card>
            <Button x:Name="GetMobIdButton" Content="Mob Id" 
                    ToolTip="Mob Id will be inserted to cliboard after click"
                    HorizontalAlignment="Left" 
                    Height="32" 
                    Margin="144,166,0,0" 
                    VerticalAlignment="Top" 
                    Width="107" 
                    Click="GetMobIdButton_Click"/>
            <!--Run button and textbox-->
            <Button x:Name="Runbutton" 
                Click="RunbuttonClick" 
                Height="Auto" 
                Content="Run" 
                Margin="10,10,418,260"/>
            <TextBox 
                x:Name="textNotifierbox" 
                TextWrapping="Wrap"
                MaxWidth="400"
                MaxHeight="50"
                IsReadOnly="True"
                TextElement.Foreground="White"
                Text =""
                AcceptsReturn="True"
                BorderThickness="1"
                BorderBrush="#FFFFC107"
                Margin="115,10,10,260"/>

            <!--Line-->
            <Rectangle 
                    MaxHeight="1" 
                    MaxWidth="500"
                    Stroke="#FFFFC107" Margin="20,148,20,155"/>

            <!--Combat profile-->
            <Label 
                Content="Combat Profile" 
                TextElement.FontSize="16"
                MaxHeight ="30"
                HorizontalAlignment="Left" 
                Margin="20,74,0,0" 
                VerticalAlignment="Top" Height="30" Width="119"/>
            <TextBox 
                x:Name="CurrentCombatProfileTextBox" 
                MouseDoubleClick="CurrentCombatProfileTextBox_MouseDoubleClick"
                ToolTip="Double click to select file"
                TextWrapping="Wrap"
                MaxWidth="360"
                MaxHeight="30"
                TextElement.FontSize="16"
                IsReadOnly="True"
                TextElement.Foreground="White"
                Text =""
                AcceptsReturn="True"
                BorderThickness="1"
                BorderBrush="#FFFFC107"
                Margin="144,74,20,207"/>

            <!--Route profile-->
            <Label 
                Content="Route Profile" 
                TextElement.FontSize="16"
                MaxHeight ="30"
                HorizontalAlignment="Left" 
                Margin="20,111,0,0" 
                VerticalAlignment="Top" Height="28" Width="115"/>
            <TextBox 
                x:Name="CurrentRouteProfileTextBox" 
                MouseDoubleClick="CurrentRouteProfileTextBox_MouseDoubleClick"
                ToolTip="Double click to select file"
                TextWrapping="Wrap"
                MaxWidth="360"
                MaxHeight="30"
                TextElement.FontSize="16"
                IsReadOnly="True"
                TextElement.Foreground="White"
                Text =""
                AcceptsReturn="True"
                BorderThickness="1"
                BorderBrush="#FFFFC107"
                Margin="144,109,20,172"/>

            <!--Edge profile-->

            <!--Secssion-->
            <Grid Margin="20,166,398,54" MaxHeight="105" MaxWidth="112">
                <GroupBox Header="            Total" Padding="5" TextElement.FontSize="12" Margin="0,0,-10,-27"  >
                </GroupBox>
                <Grid Margin="10,17,-10,-17" >
                    <Label 
                Content="00:00:00" 
                FontSize="14"
                x:Name="SessionTime"
                Margin="16,5,-14,0" />
                    <Label 
                Content="Combats" 
                FontSize="14"
                Margin="-4,28,6,-23" />
                    <Label 
                Content="Loots" 
                FontSize="14"
                Margin="-4,51,6,-21"/>
                    <Label 
                Content="Deaths"
                FontSize="14"
                Margin="-4,74,6,-19"/>
                    <Label 
                Content="0" 
                FontSize="14"
                x:Name="Combatcounter"   
                Margin="62,28,-7,-23"/>
                    <Label 
                Content="0" 
                FontSize="14"
                x:Name="Lootcounter"  
                Margin="62,51,-7,-20"/>
                    <Label 
                Content="0" 
                FontSize="14"
                x:Name="Deathcounter" 
                Margin="62,74,-62,-74"/>
                </Grid>
            </Grid>

            <!--Mob hash button and textbox-->
        </Grid>

        <!--Routes panel-->
        <Grid x:Name="Routes" Margin="0,20,0,0" Visibility="Hidden" Background="#424242">

            <!--Coverage area panel-->
            <GroupBox 
                Header="          Coverage area"
                Background="#373737"
                TextElement.FontSize="14"
                Padding="5"
                Margin="8,10,344,157"/>
            <Grid Margin="8,36,344,151">

                <TextBox 
                x:Name="XStartEditBox" 
                HorizontalAlignment="Left" 
                Height="30" 
                Foreground="White"
                TextWrapping="Wrap" 
                VerticalAlignment="Top" 
                TextAlignment="Center"
                Width="70" 
                Text="40"
                TextElement.FontSize ="18"
                AcceptsReturn="True"
                Margin="10,27,0,0"/>
                <TextBox 
                x:Name="YStartEditBox" 
                HorizontalAlignment="Left" 
                TextAlignment="Center"
                MaxHeight="30"
                Foreground="White"
                Height="30"
                Text="40"
                TextElement.FontSize ="18"
                AcceptsReturn="True"
                Margin="94,27,0,0" 
                TextWrapping="Wrap" 
                VerticalAlignment="Top" 
                MaxWidth="70"
                Width="70"/>
                <TextBlock 
                Text="X start" 
                TextElement.FontSize ="16" 
                TextAlignment="Center" 
                Foreground="White" 
                Margin="9,5,89,100" />
                <TextBlock 
                Text="Y start" 
                TextElement.FontSize ="16" 
                TextAlignment="Center" 
                Foreground="White" 
                Margin="88,5,0,97" />

                <TextBox 
                x:Name="XEndEditBox" 
                HorizontalAlignment="Left" 
                Height="29"
                Foreground="White"
                Margin="9,85,0,0" 
                TextWrapping="Wrap" 
                VerticalAlignment="Top" 
                Width="70"
                TextElement.FontSize ="18"
                AcceptsReturn="True"
                Text="70"
                TextAlignment="Center"/>
                <TextBox 
                x:Name="YEndEditBox" 
                HorizontalAlignment="Left" 
                Height="29" 
                Margin="94,85,0,0" 
                TextWrapping="Wrap"
                Foreground="White"
                TextElement.FontSize ="18"
                AcceptsReturn="True"
                Text="70"
                TextAlignment="Center"
                VerticalAlignment="Top" 
                Width="70"/>
                <TextBlock 
                Text="X end" 
                TextAlignment="Center" 
                Foreground="White" 
                TextElement.FontSize ="16" 
                Margin="17,62,99,43"/>
                <TextBlock 
                Text="Y end" 
                TextElement.FontSize ="16" 
                TextAlignment="Center" 
                Foreground="White" 
                    Margin="96,62,10,43" />

            </Grid>

            <!--Route connectivity check panel-->
            <GroupBox 
                Header="                    Route connectivity check"
                TextElement.FontSize="14"
                Padding="5"
                Margin="192,10,10,157"/>
            <Grid Margin="197,42,10,151">

                <Button 
                x:Name="TesterRun" 
                Content="Run" 
                HorizontalAlignment="Left" 
                Height="36" 
                VerticalAlignment="Top" 
                Width="68" 
                 
                Margin="10,10,0,0" Click="TesterRun_Click"/>
                <ToggleButton 
                x:Name="TesterSlider" 
                Margin="94,16,185,74" Click="TesterSlider_Click" />

                <TextBlock 
                x:Name="TesterNameOrX"  
                Text = "Name" 
                TextElement.FontSize="14"
                TextAlignment="Center" 
                Foreground="White" 
                Margin="132,5,101,94" />
                <TextBox 
                x:Name="TesterNameorXField" 
                HorizontalAlignment="Left" 
                Height="30" 
                TextWrapping="Wrap" 
                VerticalAlignment="Top" 
                Width="70" Margin="142,16,0,0"/>

                <TextBlock 
                x:Name="TesterNameOrY" 
                Visibility = "Hidden" 
                TextAlignment="Center" 
                Foreground="White" Margin="220,7,19,90" />
                <TextBox 
                x:Name="TesterNameorYField" 
                Visibility = "Hidden" 
                HorizontalAlignment="Left" 
                Height="30" 
                TextWrapping="Wrap" 
                VerticalAlignment="Top" 
                Width="70" 
                Margin="227,16,0,0"/>

                <TextBlock 
                Text="Tester Mesh Path" 
                TextAlignment="Center" 
                Foreground="White" 
                TextElement.FontSize="14"
                Margin="4,60,10,33" />
                <TextBox 
                x:Name="TesterMeshEditBox" 
                HorizontalAlignment="Center" 
                Height="30" 
                TextWrapping="Wrap" 
                VerticalAlignment="Top" 
                Width="303"  
                Margin="4,78,10,0" MouseDoubleClick="TesterMeshEditBox_MouseDoubleClick"/>

            </Grid>

            <!--Path builder panel-->
            <Rectangle 
                HorizontalAlignment="Center" 
                MaxHeight="131" 
                Height="131" 
                Margin="8,170,10,0" 
                Stroke="#373737"
                StrokeThickness="200"
                VerticalAlignment="Top" 
                Width="506"
                MaxWidth="510"/>
            <Rectangle 
                HorizontalAlignment="Left" 
                Height="29"
                MaxHeight="29"
                Margin="10,170,0,112" 
                StrokeThickness="60"
                Stroke="#ffc107" 
                Width="176"
                MaxWidth="176"/>
            <TextBlock 
                Text="Path builder" 
                Foreground="Black"
                Background="#ffc107"
                TextElement.FontSize="14"
                Margin="10,178,338,111"
                TextAlignment="Center"/>
            <TextBox 
                ToolTip="Doubleclick to choose a route file."
                x:Name="MeshEditBox" 
                HorizontalAlignment="Left" 
                Height="30" Margin="103,218,0,0" 
                TextWrapping="Wrap" 
                VerticalAlignment="Top" 
                Foreground="White" 
                Width="399" MouseDoubleClick="MeshEditBox_MouseDoubleClick" />
            <TextBlock 
                Text="Select file" 
                TextElement.FontSize="16"
                Margin="23,224,426,63" 
                TextAlignment="Center" 
                Foreground="White" />
            <TextBlock 
                Text="Picture" 
                TextElement.FontSize="16"
                Margin="4,266,426,25" 
                TextAlignment="Center" 
                Foreground="White"/>
            <TextBox 
                x:Name="PictureEditBox" 
                HorizontalAlignment="Left" 
                Height="30" 
                Margin="103,260,0,0" 
                TextWrapping="Wrap" 
                VerticalAlignment="Top" 
                Width="399"
                Text="DefaultPicture.png"
                Foreground="White" 
                ToolTip="Doubleclick to choose a background picture" MouseDoubleClick="PictureEditBox_MouseDoubleClick"/>
            <Label 
                Content="Use Wow coordinates" 
                HorizontalAlignment="Left" 
                Margin="202,183,0,0" 
                VerticalAlignment="Top"
                Foreground="White" 
                TextElement.FontSize="14"/>
            <Button 
                x:Name="Constructor" 
                Content="Constructor" 
                ToolTip="Open path constructor"
                HorizontalAlignment="Left" 
                Height="26" 
                Margin="396,182,0,0" 
                VerticalAlignment="Top" 
                Width="106" Click="Constructor_Click" />
            <ToggleButton 
                x:Name="AutoCoordSlider" 
                Margin="353,182,133,101" 
                ToolTip="Use coordinates from wow screen to create dots"/>

        </Grid>

    </Grid>
</Window>
